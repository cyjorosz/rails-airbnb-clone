<section>
<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading main-color-bg">
          <h3 class="panel-title">User Profile</h3>
        </div>
        <h2><%= @user.username %></h2>
        <%= cl_image_tag @user.photo, height: 300, width: 400, crop: :fill %>
        <p><%= @user.first_name %></p>
        <p><%= @user.last_name %></p>
        <p><%= @user.date_of_birth %></p>
        <p><%= @user.bio %></p>
        <p><%= @user.phone_number %></p>
        <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-primary" %>
        <%= link_to "Delete profile", parking_spots_path, class: "btn btn-primary", method: :delete, data: { confirm: "Are you sure?" } %>
      </div> <!-- end panel -->
      <div class="col-sm-6">
        <div class="panel panel-default">
          <div class="panel-heading main-color-bg">
            <h3 class="panel-title">Bookings</h3>
          </div>
          <!-- bookings.all -->
        </div> <!-- end panel -->
      </div>
    </div>
  </div>
</div>
</section>
